# ClaimEase Frontend - Environment Variables
# Copy this file to .env.local and update the values

# API Configuration
# Development: http://localhost:8001
# Production: https://your-api-domain.com
NEXT_PUBLIC_API_URL=http://localhost:8001

# Application Configuration
NEXT_PUBLIC_APP_NAME=ClaimEase
NEXT_PUBLIC_APP_VERSION=1.0.0

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-supabase-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=
NEXT_PUBLIC_SUPABASE_CLAIMS_TABLE=claims
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=claim_receipts
NEXT_PUBLIC_SUPABASE_SUMMARY_TABLE=claim_summary
NEXT_PUBLIC_SUPABASE_ANALYSIS_TABLE=claim_analysis
NEXT_PUBLIC_BENEFIT_INELIGIBLE_COUNTRIES=France,Malta
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key # server-only, used in /api/dashboard-data

# Receipt OCR / Gemini
NEXT_PUBLIC_ENABLE_RECEIPT_OCR=false
ENABLE_RECEIPT_OCR=0
GEMINI_API_KEY=your-gemini-api-key
GEMINI_RECEIPT_MODEL=gemini-2.5-flash

# Access Control
SUPABASE_ALLOWED_USERS_TABLE=claim_allowed_users
CLAIMEASE_SESSION_SECRET=replace-with-strong-secret

# Optional: Analytics (if you add them later)
# NEXT_PUBLIC_GA_ID=your-google-analytics-id
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
